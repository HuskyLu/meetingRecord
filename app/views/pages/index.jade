doctype html
html
	head
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport",content="width=device-width, initial-scale=1")
		link(href="/libs/bootstrap/dist/css/bootstrap.min.css",rel="stylesheet")
		link(href="/css/mylogin.css",rel="stylesheet")
		title #{title}
		//[if lt IE 9]>
			<script src="js/html5shiv.js"></script>
			<script src="js/respond.min.js"></script>
			<![endif]
	body
		.container
			.tab-content
				#login.tab-pane.active
					form.form-signin(action="/user/signin",method="post")
						h2.form-signin-heading 登陆
						label.sr-only(for="inputText") 输入你的账号
						input#inputText.form-control(name="user[name]",type="text", placeholder="输入你的账号", required, autofocus)
						label.sr-only(for="inputPassword") 输入你的密码
						input#inputPassword.form-control(name="user[password]",type="password", placeholder="输入你的密码", required)
						button.btn.btn-lg.btn-primary.btn-block(type="submit") 登陆
		script(src="/libs/jquery/dist/jquery.min.js")
		script(src="/libs/bootstrap/dist/js/bootstrap.min.js")